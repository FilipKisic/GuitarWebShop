<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>DetailsController</servlet-name>
        <servlet-class>com.gibson.controllers.DetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ESController</servlet-name>
        <servlet-class>com.gibson.controllers.ESController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LesPaulController</servlet-name>
        <servlet-class>com.gibson.controllers.LesPaulController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.gibson.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.gibson.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SGController</servlet-name>
        <servlet-class>com.gibson.controllers.SGController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>com.gibson.controllers.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>com.gibson.controllers.PaymentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryController</servlet-name>
        <servlet-class>com.gibson.controllers.HistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllHistory</servlet-name>
        <servlet-class>com.gibson.controllers.AllHistory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrudController</servlet-name>
        <servlet-class>com.gibson.controllers.CrudController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoController</servlet-name>
        <servlet-class>com.gibson.controllers.InfoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailsController</servlet-name>
        <url-pattern>/details/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ESController</servlet-name>
        <url-pattern>/showes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LesPaulController</servlet-name>
        <url-pattern>/showlespaul</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SGController</servlet-name>
        <url-pattern>/showsg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryController</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllHistory</servlet-name>
        <url-pattern>/allHistory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrudController</servlet-name>
        <url-pattern>/crud</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoController</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
